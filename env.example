# Variables de Entorno - Sistema de Control de Facturas Boosting
# Copia este archivo a .env y configura los valores según tu entorno

# ===========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ===========================================
DB_PASSWORD=boosting_password_2024
DATABASE_URL=postgresql://boosting_user:boosting_password_2024@localhost:5432/facturas_boosting

# ===========================================
# CONFIGURACIÓN DE SEGURIDAD
# ===========================================
SECRET_KEY=your-secret-key-change-in-production-make-it-very-long-and-random
ALLOWED_HOSTS=localhost,127.0.0.1,tu-dominio.com

# ===========================================
# CONFIGURACIÓN DE GMAIL API
# ===========================================
GMAIL_CREDENTIALS_FILE=credentials.json
GMAIL_TOKEN_FILE=token.json
GMAIL_SCOPES=https://www.googleapis.com/auth/gmail.readonly,https://www.googleapis.com/auth/gmail.modify

# ===========================================
# CONFIGURACIÓN DE SSL (PRODUCCIÓN)
# ===========================================
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem

# ===========================================
# CONFIGURACIÓN DE LOGS
# ===========================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ===========================================
# CONFIGURACIÓN DE REDIS (OPCIONAL)
# ===========================================
REDIS_URL=redis://redis:6379/0

# ===========================================
# CONFIGURACIÓN DE MONITOREO
# ===========================================
SENTRY_DSN=your-sentry-dsn-here
HEALTH_CHECK_INTERVAL=30

# ===========================================
# CONFIGURACIÓN DE BACKUP
# ===========================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ===========================================
# CONFIGURACIÓN DE EMAIL (OPCIONAL)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASSWORD=tu-app-password
SMTP_FROM=tu-email@gmail.com

# ===========================================
# CONFIGURACIÓN DE DESARROLLO
# ===========================================
DEBUG=false
ENVIRONMENT=production
